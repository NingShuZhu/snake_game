<AnchorPane fx:id="rootLayout" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comp2013cw.snakegame.Controller.GameController">
   <children>
      <Canvas fx:id="canvas" height="600.0" width="900.0" />
