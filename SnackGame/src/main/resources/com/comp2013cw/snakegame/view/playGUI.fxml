         </image>
      </ImageView>
      <Label layoutX="314.0" layoutY="54.0" prefHeight="41.0" prefWidth="114.0" text="Highest Score: " textFill="#fcc8ff">
         <font>
            <Font name="Candara" size="18.0" />
         </font>
      </Label>
      <Label fx:id="highestScore" layoutX="438.0" layoutY="54.0" prefHeight="41.0" prefWidth="114.0" textFill="#fcc8ff">
         <font>
            <Font name="Candara Bold" size="18.0" />
         </font>
      </Label>
